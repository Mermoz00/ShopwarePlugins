{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}
{% block page_product_detail_buy_form %}
	{{ parent() }}
    <div class="product-detail-price-container">

        <div class="hidden-xs" style="display: block; font-size: 16px; margin-bottom: 2px;">

            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#productRequestForm">
                {{ 'wagner.productForm.button'|trans }}
            </button>

        </div>
        {% sw_include '@Storefront/storefront/page/product-detail/contact-form.html.twig'
            with {
            action: 'frontend.mail.askprice',
            submitText: 'wagner.productForm.submit'
        } %}
    </div>
{% endblock %}
